@model tplab.ViewsModel.LoginVM
@{
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tplab.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="row mt-5 justify-content-center">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    Iniciar Sesion
                </div>
                <div class="card-body">

                    <form asp-controller="Acceso" asp-action="Login" method="post">
                        <input class="form-control mb-3" type="text" placeholder="Nombre de usuario" asp-for="UserName" required />
                        <input class="form-control mb-3" type="password" placeholder="Contraseña" asp-for="Password" required />
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-success" type="submit">Iniciar Sesion</button>
                        </div>

                        @if (ViewData["AlertMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                @ViewData["AlertMessage"]
                            </div>
                        }

                        No tienes una cuenta? <a asp-controller="Acceso" asp-action="Registrarse">Registrarse</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</body>
</html>